{
  "name": "@web-book/core",
  "version": "1.0.0",
  "description": "A vanilla JavaScript library for beautiful, responsive book reading experiences on the web",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danbroadbent/web-book.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/web-book.js",
  "module": "dist/web-book.esm.js",
  "exports": {
    ".": {
      "import": "./dist/web-book.esm.js",
      "require": "./dist/web-book.js"
    },
    "./styles": "./dist/web-book.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build:watch": "rollup -c -w",
    "build": "rollup -c",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "serve": "python3 -m http.server 8000"
  },
  "keywords": [
    "web-components",
    "ebook",
    "reader",
    "book",
    "pagination",
    "reading"
  ],
  "author": "Dan Broadbent",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.56.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "rollup-plugin-css-only": "^4.5.2",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
